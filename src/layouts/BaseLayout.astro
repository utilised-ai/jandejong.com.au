---
import Header from '../components/Header.astro';
import { siteConfig } from '../config/site.js';
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = siteConfig.description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title} | {siteConfig.name}</title>
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
</head>
<body>
  <Header />
  <main>
    <slot />
  </main>
  <footer class="bg-gray-900 text-white py-12">
    <div class="container-width">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div>
          <h3 class="text-xl mb-4">Opening Hours</h3>
          <p>Monday-Friday: {siteConfig.hours.weekdays}</p>
          <p>Saturday-Sunday: {siteConfig.hours.weekends}</p>
          <p class="text-sm text-gray-400 mt-2">{siteConfig.hours.note}</p>
        </div>
        <div>
          <h3 class="text-xl mb-4">Contact Us</h3>
          <p><a href={`tel:${siteConfig.contact.phone}`} class="hover:text-red-400">{siteConfig.contact.phone}</a></p>
          <p><a href={`mailto:${siteConfig.contact.email}`} class="hover:text-red-400">{siteConfig.contact.email}</a></p>
        </div>
        <div>
          <h3 class="text-xl mb-4">Classes</h3>
          <div class="space-y-1 text-sm">
            <div><a href="/ju-jutsu" class="hover:text-red-400">Ju Jutsu (Adult & Kids)</a></div>
            <div><a href="/aikido-perth" class="hover:text-red-400">Aikido</a></div>
            <div><a href="/tai-chi" class="hover:text-red-400">Tai Chi</a></div>
            <div><a href="/self-defence" class="hover:text-red-400">Self Defence for Women</a></div>
            <div><a href="/self-protection" class="hover:text-red-400">Self-Protection</a></div>
            <div><a href="/sword-training" class="hover:text-red-400">Sword Training</a></div>
            <div><a href="/personal-training" class="hover:text-red-400">Personal Training</a></div>
            <div><a href="/corporate-training" class="hover:text-red-400">Corporate Training</a></div>
          </div>
        </div>
        <div>
          <h3 class="text-xl mb-4">Follow Us</h3>
          <div class="flex gap-4 mb-4">
            <a href={siteConfig.social.facebook} class="hover:text-red-400">Facebook</a>
            <a href={siteConfig.social.instagram} class="hover:text-red-400">Instagram</a>
          </div>
          <div class="space-y-1 text-sm">
            <div><a href="/membership" class="hover:text-red-400">Membership</a></div>
            <div><a href="/free-trial" class="hover:text-red-400">Free Trial</a></div>
            <div><a href="/timetable" class="hover:text-red-400">Timetable</a></div>
            <div><a href="/history" class="hover:text-red-400">Our History</a></div>
          </div>
        </div>
      </div>
      <div class="mt-8 pt-8 border-t border-gray-700 text-center">
        <p>&copy; {siteConfig.business.currentYear} {siteConfig.name}. All rights reserved.</p>
      </div>
    </div>
  </footer>
</body>
</html>