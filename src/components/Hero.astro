---
import Button from './Button.astro';

export interface Props {
  title: string;
  subtitle?: string;
  ctaText?: string;
  ctaLink?: string;
  backgroundImage: string;
  height?: string;
  showCta?: boolean;
}

const { 
  title, 
  subtitle, 
  ctaText = 'FREE TRIAL', 
  ctaLink = '/free-trial', 
  backgroundImage,
  height = 'min-h-[400px]',
  showCta = true
} = Astro.props;
---

<div class={`hero ${height}`} style={`background-image: url('${backgroundImage}');`}>
  <div class="hero-overlay bg-opacity-60"></div>
  <div class="hero-content text-center text-neutral-content">
    <div class="max-w-4xl">
      <h1 class="mb-5 text-4xl md:text-6xl font-bold uppercase drop-shadow-lg">
        {title}
      </h1>
      {subtitle && (
        <p class="mb-8 text-xl md:text-2xl drop-shadow-lg">
          {subtitle}
        </p>
      )}
      {showCta && (
        <Button href={ctaLink} type="primary" size="lg" class="shadow-lg">
          {ctaText}
        </Button>
      )}
    </div>
  </div>
</div>