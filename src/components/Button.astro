---
export interface Props {
  href?: string;
  type?: 'primary' | 'secondary' | 'accent' | 'ghost' | 'outline';
  size?: 'xs' | 'sm' | 'md' | 'lg';
  class?: string;
  disabled?: boolean;
}

const { href, type = 'primary', size = 'md', class: className = '', disabled = false } = Astro.props;

const sizes = {
  xs: 'btn-xs',
  sm: 'btn-sm', 
  md: 'btn-md',
  lg: 'btn-lg',
};

const types = {
  primary: 'btn-primary',
  secondary: 'btn-secondary',
  accent: 'btn-accent',
  ghost: 'btn-ghost',
  outline: 'btn-outline',
};

const classes = `btn ${sizes[size]} ${types[type]} ${className}`;

const Tag = href ? 'a' : 'button';
---

<Tag href={href} class={classes} disabled={disabled}>
  <slot />
</Tag>