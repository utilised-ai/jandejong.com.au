---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
---

<BaseLayout title="Thank You - Jan de Jong Martial Arts Fitness Perth | Message Received" description="Thank you for contacting Jan de Jong Martial Arts Fitness Perth. We've received your message and will get back to you shortly.">
  <section class="section-padding">
    <div class="container-width max-w-4xl text-center">
      <h1 class="text-4xl md:text-6xl font-heading uppercase mb-8">Thank You</h1>
      
      <div class="prose prose-lg mx-auto">
        <h2 class="text-2xl md:text-3xl mb-8">We've received your message and will get back to you shortly!</h2>
        
        <div class="mt-12">
          <Button href="/">Return Home</Button>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>