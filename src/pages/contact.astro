---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
import Hero from '../components/Hero.astro';
---

<BaseLayout title="Contact - Jan de Jong Martial Arts Fitness Perth | Get in Touch" description="Contact Jan de Jong Martial Arts Fitness Perth. Located at Shirley Strickland Reserve Ardross & Mount Claremont Community Centre. Call 0427970481 or email info@jandejong.com.au">
  <Hero 
    title="Contact" 
    backgroundImage="/images/contact-hero.jpg"
    showCta={false}
  />
  
  <section class="section-padding">
    <div class="container-width">
      <h2 class="text-3xl md:text-4xl text-center mb-12">Contact Us</h2>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-12">
        <!-- Contact Info -->
        <div class="space-y-8">
          <div>
            <h3 class="text-2xl font-heading uppercase mb-6">Contact Info</h3>
            
            <div class="space-y-6">
              <div>
                <h4 class="text-xl font-semibold mb-2">Addresses</h4>
                <div class="space-y-2">
                  <p>Shirley Strickland reserve, Coogee Rd, Ardross WA 6153</p>
                  <p>Mount Claremont Community Centre, 105 Montgomery Ave, Mount Claremont WA 6008</p>
                </div>
              </div>
              
              <div>
                <h4 class="text-xl font-semibold mb-2">Phone</h4>
                <p><a href="tel:0427970481" class="text-primary hover:underline text-lg">0427970481</a></p>
              </div>
              
              <div>
                <h4 class="text-xl font-semibold mb-2">Email</h4>
                <p><a href="mailto:info@jandejong.com.au" class="text-primary hover:underline text-lg">info@jandejong.com.au</a></p>
              </div>
              
              <div>
                <h4 class="text-xl font-semibold mb-2">Opening Hours:</h4>
                <div class="space-y-1">
                  <p>Monday-Friday: 6am to 9pm</p>
                  <p>Saturday-Sunday: 8am to 5pm</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Contact Form -->
        <div>
          <h3 class="text-2xl font-heading uppercase mb-6">Get in Touch</h3>
          <form action="https://api.web3forms.com/submit" method="POST" class="space-y-4">
            <input type="hidden" name="access_key" value="YOUR_ACCESS_KEY_HERE">
            
            <div>
              <label for="name" class="block mb-2 font-semibold">Name *</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:border-primary"
              >
            </div>
            
            <div>
              <label for="phone" class="block mb-2 font-semibold">Phone Number</label>
              <input 
                type="tel" 
                id="phone" 
                name="phone"
                class="w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:border-primary"
              >
            </div>
            
            <div>
              <label for="email" class="block mb-2 font-semibold">Email *</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:border-primary"
              >
            </div>
            
            <div>
              <label for="comments" class="block mb-2 font-semibold">Comments</label>
              <textarea 
                id="comments" 
                name="comments" 
                rows="4"
                maxlength="180"
                placeholder="0 / 180"
                class="w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:border-primary"
              ></textarea>
            </div>
            
            <button type="submit" class="w-full bg-primary text-white py-3 px-6 rounded hover:bg-primary-dark transition-colors font-semibold text-lg">
              Submit
            </button>
          </form>
        </div>
      </div>
      
      <!-- Book Free Trial Section -->
      <div class="text-center bg-accent p-8 rounded">
        <h2 class="text-3xl md:text-4xl mb-4">BOOK A FREE TRIAL</h2>
        <p class="text-lg mb-6">
          Memberships are purchased online or in the dojo as either pre-paid or subscription options. 
          There are separate memberships for adults, students, and children.
        </p>
        <Button href="/free-trial">Free Trial</Button>
      </div>
    </div>
  </section>
</BaseLayout>